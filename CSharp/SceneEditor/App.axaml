<!-- File: CSharp/SceneEditor/App.axaml -->
<Application
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:SceneEditor"
    x:Class="SceneEditor.App"
    RequestedThemeVariant="Default">

	<!-- Data Templates -->
	<Application.DataTemplates>
		<local:DockViewLocator />
	</Application.DataTemplates>

	<!-- Resources -->
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<!-- Control Recycling for Dock -->
				<ResourceDictionary>
					<ControlRecycling x:Key="ControlRecyclingKey" />
				</ResourceDictionary>

				<!-- Professional Theme Resources -->
				<ResourceDictionary>
					<ResourceDictionary.ThemeDictionaries>
						<!-- Light Theme -->
						<ResourceDictionary x:Key='Default'>
							<!-- Background Colors -->
							<Color x:Key="AppBackgroundColor">#FFFFFF</Color>
							<Color x:Key="PanelBackgroundColor">#F8F9FA</Color>
							<Color x:Key="SurfaceBackgroundColor">#FFFFFF</Color>
							<Color x:Key="CardBackgroundColor">#FFFFFF</Color>
							<Color x:Key="HeaderBackgroundColor">#F1F3F4</Color>
							<Color x:Key="StatusBarBackgroundColor">#E9ECEF</Color>

							<!-- Text Colors -->
							<Color x:Key="PrimaryTextColor">#212529</Color>
							<Color x:Key="SecondaryTextColor">#6C757D</Color>
							<Color x:Key="DisabledTextColor">#ADB5BD</Color>
							<Color x:Key="AccentTextColor">#0D6EFD</Color>

							<!-- Border Colors -->
							<Color x:Key="BorderColor">#DEE2E6</Color>
							<Color x:Key="DividerColor">#E9ECEF</Color>
							<Color x:Key="FocusBorderColor">#0D6EFD</Color>

							<!-- Interactive Colors -->
							<Color x:Key="HoverBackgroundColor">#F8F9FA</Color>
							<Color x:Key="ActiveBackgroundColor">#E9ECEF</Color>
							<Color x:Key="SelectionBackgroundColor">#0D6EFD</Color>
							<Color x:Key="SelectionTextColor">#FFFFFF</Color>

							<!-- Status Colors -->
							<Color x:Key="SuccessColor">#198754</Color>
							<Color x:Key="WarningColor">#FFC107</Color>
							<Color x:Key="ErrorColor">#DC3545</Color>
							<Color x:Key="InfoColor">#0DCAF0</Color>

							<!-- Brushes -->
							<SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBackgroundColor}" />
							<SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}" />
							<SolidColorBrush x:Key="SurfaceBackgroundBrush" Color="{StaticResource SurfaceBackgroundColor}" />
							<SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}" />
							<SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource HeaderBackgroundColor}" />
							<SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="{StaticResource StatusBarBackgroundColor}" />

							<SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}" />
							<SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}" />
							<SolidColorBrush x:Key="DisabledTextBrush" Color="{StaticResource DisabledTextColor}" />
							<SolidColorBrush x:Key="AccentTextBrush" Color="{StaticResource AccentTextColor}" />

							<SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
							<SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerColor}" />
							<SolidColorBrush x:Key="FocusBorderBrush" Color="{StaticResource FocusBorderColor}" />

							<SolidColorBrush x:Key="HoverBackgroundBrush" Color="{StaticResource HoverBackgroundColor}" />
							<SolidColorBrush x:Key="ActiveBackgroundBrush" Color="{StaticResource ActiveBackgroundColor}" />
							<SolidColorBrush x:Key="SelectionBackgroundBrush" Color="{StaticResource SelectionBackgroundColor}" />
							<SolidColorBrush x:Key="SelectionTextBrush" Color="{StaticResource SelectionTextColor}" />

							<!-- Legacy Compatibility -->
							<SolidColorBrush x:Key="TextControlBackground">#FFFFFF</SolidColorBrush>
							<SolidColorBrush x:Key="TextControlBackgroundFocused">#FFFFFF</SolidColorBrush>
							<SolidColorBrush x:Key="TextControlBackgroundPointerOver">#F8F9FA</SolidColorBrush>
							<SolidColorBrush x:Key="TextControlForeground">#212529</SolidColorBrush>
							<SolidColorBrush x:Key="TextForegroundColor">#212529</SolidColorBrush>
							<SolidColorBrush x:Key="TextControlBorderBrush">#DEE2E6</SolidColorBrush>
							<SolidColorBrush x:Key="TextControlBorderBrushPointerOver">#0D6EFD</SolidColorBrush>
							<Color x:Key="RegionColor">#F8F9FA</Color>
							<Color x:Key="AcrylicFallbackColor">#F8F9FA</Color>

							<!-- System Brushes for Avalonia compatibility -->
							<SolidColorBrush x:Key="SystemRegionBrush" Color="#F8F9FA"/>
							<SolidColorBrush x:Key="SystemBaseMediumBrush" Color="#6C757D"/>
							<SolidColorBrush x:Key="SystemListLowBrush" Color="#F8F9FA"/>
						</ResourceDictionary>

						<!-- Dark Theme -->
						<ResourceDictionary x:Key='Dark'>
							<!-- Background Colors -->
							<Color x:Key="AppBackgroundColor">#1E1E1E</Color>
							<Color x:Key="PanelBackgroundColor">#252526</Color>
							<Color x:Key="SurfaceBackgroundColor">#2D2D30</Color>
							<Color x:Key="CardBackgroundColor">#2D2D30</Color>
							<Color x:Key="HeaderBackgroundColor">#37373D</Color>
							<Color x:Key="StatusBarBackgroundColor">#007ACC</Color>

							<!-- Text Colors -->
							<Color x:Key="PrimaryTextColor">#CCCCCC</Color>
							<Color x:Key="SecondaryTextColor">#9CDCFE</Color>
							<Color x:Key="DisabledTextColor">#6A6A6A</Color>
							<Color x:Key="AccentTextColor">#569CD6</Color>

							<!-- Border Colors -->
							<Color x:Key="BorderColor">#464647</Color>
							<Color x:Key="DividerColor">#3F3F46</Color>
							<Color x:Key="FocusBorderColor">#007ACC</Color>

							<!-- Interactive Colors -->
							<Color x:Key="HoverBackgroundColor">#3F3F46</Color>
							<Color x:Key="ActiveBackgroundColor">#464647</Color>
							<Color x:Key="SelectionBackgroundColor">#007ACC</Color>
							<Color x:Key="SelectionTextColor">#FFFFFF</Color>

							<!-- Status Colors -->
							<Color x:Key="SuccessColor">#4EC9B0</Color>
							<Color x:Key="WarningColor">#DCDCAA</Color>
							<Color x:Key="ErrorColor">#F14C4C</Color>
							<Color x:Key="InfoColor">#9CDCFE</Color>

							<!-- Brushes -->
							<SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBackgroundColor}" />
							<SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}" />
							<SolidColorBrush x:Key="SurfaceBackgroundBrush" Color="{StaticResource SurfaceBackgroundColor}" />
							<SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}" />
							<SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource HeaderBackgroundColor}" />
							<SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="{StaticResource StatusBarBackgroundColor}" />

							<SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}" />
							<SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}" />
							<SolidColorBrush x:Key="DisabledTextBrush" Color="{StaticResource DisabledTextColor}" />
							<SolidColorBrush x:Key="AccentTextBrush" Color="{StaticResource AccentTextColor}" />

							<SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
							<SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerColor}" />
							<SolidColorBrush x:Key="FocusBorderBrush" Color="{StaticResource FocusBorderColor}" />

							<SolidColorBrush x:Key="HoverBackgroundBrush" Color="{StaticResource HoverBackgroundColor}" />
							<SolidColorBrush x:Key="ActiveBackgroundBrush" Color="{StaticResource ActiveBackgroundColor}" />
							<SolidColorBrush x:Key="SelectionBackgroundBrush" Color="{StaticResource SelectionBackgroundColor}" />
							<SolidColorBrush x:Key="SelectionTextBrush" Color="{StaticResource SelectionTextColor}" />

							<!-- Legacy Compatibility -->
							<SolidColorBrush x:Key="TextControlBackground">#2D2D30</SolidColorBrush>
							<SolidColorBrush x:Key="TextControlBackgroundFocused">#2D2D30</SolidColorBrush>
							<SolidColorBrush x:Key="TextControlBackgroundPointerOver">#3F3F46</SolidColorBrush>
							<SolidColorBrush x:Key="TextControlForeground">#CCCCCC</SolidColorBrush>
							<SolidColorBrush x:Key="TextForegroundColor">#CCCCCC</SolidColorBrush>
							<SolidColorBrush x:Key="TextControlBorderBrush">#464647</SolidColorBrush>
							<SolidColorBrush x:Key="TextControlBorderBrushPointerOver">#007ACC</SolidColorBrush>
							<Color x:Key="RegionColor">#252526</Color>
							<Color x:Key="AcrylicFallbackColor">#1E1E1E</Color>

							<!-- System Brushes for Avalonia compatibility -->
							<SolidColorBrush x:Key="SystemRegionBrush" Color="#252526"/>
							<SolidColorBrush x:Key="SystemBaseMediumBrush" Color="#9CDCFE"/>
							<SolidColorBrush x:Key="SystemListLowBrush" Color="#3F3F46"/>
						</ResourceDictionary>
					</ResourceDictionary.ThemeDictionaries>
				</ResourceDictionary>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>

		<!-- Fonts -->
		<FontFamily x:Key="FontAwesome">avares://SceneEditor/Assets/fonts/fa-solid-900.ttf#Font Awesome 5 Free</FontFamily>
		<FontFamily x:Key="CodeFont">Consolas,SF Mono,Monaco,Inconsolata,Fira Code,Source Code Pro,monospace</FontFamily>

		<!-- Tool Icons (FontAwesome glyphs) -->
		<x:String x:Key="IconSelect">&#xf245;</x:String>
		<x:String x:Key="IconMove">&#xf047;</x:String>
		<x:String x:Key="IconRotate">&#xf2f1;</x:String>
		<x:String x:Key="IconScale">&#xf424;</x:String>
		<x:String x:Key="IconPaint">&#xf1fc;</x:String>
		<x:String x:Key="IconErase">&#xf12d;</x:String>
		<x:String x:Key="IconFloodFill">&#xf576;</x:String>
		<x:String x:Key="IconEye">&#xf06e;</x:String>
		<x:String x:Key="IconEyeSlash">&#xf070;</x:String>
		<x:String x:Key="IconLock">&#xf023;</x:String>
		<x:String x:Key="IconUnlock">&#xf09c;</x:String>
		<x:String x:Key="IconFolder">&#xf07b;</x:String>
		<x:String x:Key="IconFile">&#xf15b;</x:String>
		<x:String x:Key="IconCube">&#xf1b2;</x:String>
		<x:String x:Key="IconImage">&#xf03e;</x:String>
		<x:String x:Key="IconPlay">&#xf04b;</x:String>
		<x:String x:Key="IconPause">&#xf04c;</x:String>
		<x:String x:Key="IconStop">&#xf04d;</x:String>
		<x:String x:Key="IconSave">&#xf0c7;</x:String>
		<x:String x:Key="IconOpen">&#xf07c;</x:String>
		<x:String x:Key="IconNew">&#xf15b;</x:String>
		<x:String x:Key="IconUndo">&#xf0e2;</x:String>
		<x:String x:Key="IconRedo">&#xf01e;</x:String>

		<!-- Legacy Color Brushes for compatibility -->
		<SolidColorBrush x:Key="EditorBackground" Color="{DynamicResource AppBackgroundColor}" />
		<SolidColorBrush x:Key="PanelBackground" Color="{DynamicResource PanelBackgroundColor}" />
		<SolidColorBrush x:Key="SelectedItemBrush" Color="{DynamicResource SelectionBackgroundColor}" />
		<SolidColorBrush x:Key="HoverItemBrush" Color="{DynamicResource HoverBackgroundColor}" />
	</Application.Resources>

	<!-- Application-wide Styles -->
	<Application.Styles>
		<FluentTheme />
		<DockFluentTheme />

		<!-- Dock Control Recycling -->
		<Style Selector="DockControl">
			<Setter Property="(ControlRecyclingDataTemplate.ControlRecycling)" Value="{StaticResource ControlRecyclingKey}" />
			<Setter Property="Background" Value="{DynamicResource AppBackgroundBrush}" />
		</Style>

		<!-- Document Control Style -->
		<Style Selector="DocumentControl">
			<Setter Property="HeaderTemplate">
				<DataTemplate>
					<StackPanel Orientation="Horizontal">
						<PathIcon
							Data="M5 1C3.89543 1 3 1.89543 3 3V13C3 14.1046 3.89543 15 5 15H11C12.1046 15 13 14.1046 13 13V5.41421C13 5.01639 12.842 4.63486 12.5607 4.35355L9.64645 1.43934C9.36514 1.15804 8.98361 1 8.58579 1H5ZM4 3C4 2.44772 4.44772 2 5 2H8V4.5C8 5.32843 8.67157 6 9.5 6H12V13C12 13.5523 11.5523 14 11 14H5C4.44772 14 4 13.5523 4 13V3ZM11.7929 5H9.5C9.22386 5 9 4.77614 9 4.5V2.20711L11.7929 5Z"
							Width="16"
							Height="16"
							Margin="0" />
						<TextBlock Text="{Binding Title}"
								   VerticalAlignment="Center"
								   Padding="4,0,0,0" />
					</StackPanel>
				</DataTemplate>
			</Setter>
		</Style>

		<!-- Tool Control Style -->
		<Style Selector="ToolControl">
			<Setter Property="HeaderTemplate">
				<DataTemplate>
					<TextBlock Text="{Binding Title}" Padding="2" />
				</DataTemplate>
			</Setter>
		</Style>

		<!-- Tool Chrome Control Style -->
		<Style Selector="ToolChromeControl">
			<Setter Property="Background" Value="Transparent" />
		</Style>
		<Style Selector="TextBlock">
			<Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
			<Setter Property="FontFamily" Value="Segoe UI,SF Pro Display,Helvetica Neue,Arial,sans-serif" />
		</Style>

		<Style Selector="TextBox">
			<Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
			<Setter Property="Background" Value="{DynamicResource SurfaceBackgroundBrush}" />
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
			<Setter Property="FontFamily" Value="Segoe UI,SF Pro Display,Helvetica Neue,Arial,sans-serif" />
			<Setter Property="BorderThickness" Value="1" />
			<Setter Property="CornerRadius" Value="4" />
			<Setter Property="Padding" Value="8,6" />
		</Style>

		<Style Selector="TextBox:focus">
			<Setter Property="BorderBrush" Value="{DynamicResource FocusBorderBrush}" />
		</Style>

		<Style Selector="Button">
			<Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
			<Setter Property="Background" Value="{DynamicResource SurfaceBackgroundBrush}" />
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
			<Setter Property="FontFamily" Value="Segoe UI,SF Pro Display,Helvetica Neue,Arial,sans-serif" />
			<Setter Property="BorderThickness" Value="1" />
			<Setter Property="CornerRadius" Value="4" />
			<Setter Property="Padding" Value="12,8" />
		</Style>

		<Style Selector="Button:pointerover">
			<Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
		</Style>

		<Style Selector="Button:pressed">
			<Setter Property="Background" Value="{DynamicResource ActiveBackgroundBrush}" />
		</Style>

		<!-- Professional Panel Styles -->
		<Style Selector="Border.Panel">
			<Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}" />
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
			<Setter Property="BorderThickness" Value="1" />
			<Setter Property="CornerRadius" Value="6" />
			<Setter Property="Padding" Value="12" />
		</Style>

		<Style Selector="TextBlock.PanelHeader">
			<Setter Property="FontWeight" Value="SemiBold" />
			<Setter Property="FontSize" Value="16" />
			<Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
			<Setter Property="Margin" Value="0,0,0,12" />
		</Style>

		<!-- Professional Card Style -->
		<Style Selector="Border.Card">
			<Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
			<Setter Property="BorderThickness" Value="1" />
			<Setter Property="CornerRadius" Value="8" />
			<Setter Property="Padding" Value="16" />
			<Setter Property="BoxShadow" Value="0 2 8 0 #08000000" />
		</Style>

		<!-- Professional Button Styles -->
		<Style Selector="Button.Primary">
			<Setter Property="Background" Value="{DynamicResource SelectionBackgroundBrush}" />
			<Setter Property="Foreground" Value="{DynamicResource SelectionTextBrush}" />
			<Setter Property="BorderThickness" Value="0" />
			<Setter Property="FontWeight" Value="Medium" />
		</Style>

		<Style Selector="Button.Primary:pointerover">
			<Setter Property="Opacity" Value="0.9" />
		</Style>

		<Style Selector="Button.Secondary">
			<Setter Property="Background" Value="Transparent" />
			<Setter Property="Foreground" Value="{DynamicResource AccentTextBrush}" />
			<Setter Property="BorderBrush" Value="{DynamicResource AccentTextBrush}" />
			<Setter Property="BorderThickness" Value="1" />
		</Style>

		<Style Selector="Button.Secondary:pointerover">
			<Setter Property="Background" Value="{DynamicResource SelectionBackgroundBrush}" />
			<Setter Property="Foreground" Value="{DynamicResource SelectionTextBrush}" />
		</Style>

		<Style Selector="Button.Icon">
			<Setter Property="Background" Value="Transparent" />
			<Setter Property="BorderThickness" Value="0" />
			<Setter Property="Padding" Value="8" />
			<Setter Property="Width" Value="32" />
			<Setter Property="Height" Value="32" />
		</Style>

		<Style Selector="Button.Icon:pointerover">
			<Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
		</Style>

		<!-- Modern Tool Button Style -->
		<Style Selector="Button.Tool, ToggleButton.Tool">
			<Setter Property="Width" Value="36" />
			<Setter Property="Height" Value="36" />
			<Setter Property="Padding" Value="6" />
			<Setter Property="Margin" Value="2" />
			<Setter Property="Background" Value="Transparent" />
			<Setter Property="BorderThickness" Value="1" />
			<Setter Property="BorderBrush" Value="Transparent" />
			<Setter Property="CornerRadius" Value="4" />
		</Style>

		<Style Selector="Button.Tool:pointerover, ToggleButton.Tool:pointerover">
			<Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
		</Style>

		<Style Selector="Button.Tool:checked, ToggleButton.Tool:checked">
			<Setter Property="Background" Value="{DynamicResource SelectionBackgroundBrush}" />
			<Setter Property="Foreground" Value="{DynamicResource SelectionTextBrush}" />
			<Setter Property="BorderBrush" Value="{DynamicResource SelectionBackgroundBrush}" />
		</Style>

		<!-- Professional ListBox Style -->
		<Style Selector="ListBox">
			<Setter Property="Background" Value="Transparent" />
			<Setter Property="BorderThickness" Value="0" />
		</Style>

		<Style Selector="ListBoxItem">
			<Setter Property="Padding" Value="8" />
			<Setter Property="Margin" Value="2,1" />
			<Setter Property="CornerRadius" Value="4" />
		</Style>

		<Style Selector="ListBoxItem:pointerover">
			<Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
		</Style>

		<Style Selector="ListBoxItem:selected">
			<Setter Property="Background" Value="{DynamicResource SelectionBackgroundBrush}" />
			<Setter Property="Foreground" Value="{DynamicResource SelectionTextBrush}" />
		</Style>

		<!-- Professional TreeView Style -->
		<Style Selector="TreeView">
			<Setter Property="Background" Value="Transparent" />
			<Setter Property="BorderThickness" Value="0" />
		</Style>

		<Style Selector="TreeViewItem">
			<Setter Property="Padding" Value="4" />
			<Setter Property="Margin" Value="1" />
		</Style>

		<Style Selector="TreeViewItem:pointerover">
			<Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
		</Style>

		<Style Selector="TreeViewItem:selected">
			<Setter Property="Background" Value="{DynamicResource SelectionBackgroundBrush}" />
			<Setter Property="Foreground" Value="{DynamicResource SelectionTextBrush}" />
		</Style>

		<!-- Professional TextBox Styles -->
		<Style Selector="TextBox.Search">
			<Setter Property="CornerRadius" Value="16" />
			<Setter Property="Padding" Value="12,8" />
			<Setter Property="Background" Value="{DynamicResource SurfaceBackgroundBrush}" />
			<Setter Property="BorderThickness" Value="1" />
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
		</Style>

		<Style Selector="TextBox.Search:focus">
			<Setter Property="BorderBrush" Value="{DynamicResource FocusBorderBrush}" />
		</Style>

		<Style Selector="TextBox.Code">
			<Setter Property="FontFamily" Value="{StaticResource CodeFont}" />
			<Setter Property="FontSize" Value="12" />
			<Setter Property="Background" Value="{DynamicResource SurfaceBackgroundBrush}" />
		</Style>

		<!-- Status Bar Style -->
		<Style Selector="Border.StatusBar">
			<Setter Property="Background" Value="{DynamicResource StatusBarBackgroundBrush}" />
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
			<Setter Property="BorderThickness" Value="0,1,0,0" />
			<Setter Property="Padding" Value="12,6" />
		</Style>

		<!-- Header Style -->
		<Style Selector="Border.Header">
			<Setter Property="Background" Value="{DynamicResource HeaderBackgroundBrush}" />
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
			<Setter Property="BorderThickness" Value="0,0,0,1" />
			<Setter Property="Padding" Value="12,8" />
		</Style>

		<!-- Viewport Border Style -->
		<Style Selector="Border.Viewport">
			<Setter Property="Background" Value="{DynamicResource AppBackgroundBrush}" />
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
			<Setter Property="BorderThickness" Value="1" />
			<Setter Property="CornerRadius" Value="4" />
		</Style>

		<!-- Modern Menu Style -->
		<Style Selector="Menu">
			<Setter Property="Background" Value="{DynamicResource HeaderBackgroundBrush}" />
		</Style>

		<Style Selector="MenuItem">
			<Setter Property="Padding" Value="12,6" />
		</Style>

		<Style Selector="MenuItem:pointerover">
			<Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
		</Style>

		<!-- Modern Separator Style -->
		<Style Selector="Separator">
			<Setter Property="Background" Value="{DynamicResource DividerBrush}" />
		</Style>

		<!-- ComboBox Style -->
		<Style Selector="ComboBox">
			<Setter Property="Background" Value="{DynamicResource SurfaceBackgroundBrush}" />
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
			<Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
			<Setter Property="CornerRadius" Value="4" />
			<Setter Property="Padding" Value="8,6" />
		</Style>

		<!-- CheckBox Style -->
		<Style Selector="CheckBox">
			<Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
		</Style>

		<!-- RadioButton Style -->
		<Style Selector="RadioButton">
			<Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
		</Style>

		<!-- Expander Style -->
		<Style Selector="Expander">
			<Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}" />
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
			<Setter Property="CornerRadius" Value="4" />
		</Style>

		<!-- ProgressBar Style -->
		<Style Selector="ProgressBar">
			<Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}" />
			<Setter Property="Foreground" Value="{DynamicResource SelectionBackgroundBrush}" />
			<Setter Property="CornerRadius" Value="2" />
		</Style>

		<!-- TabItem Style (using standard Avalonia TabItem) -->
		<Style Selector="TabItem">
			<Setter Property="Background" Value="Transparent" />
			<Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}" />
			<Setter Property="Padding" Value="12,8" />
			<Setter Property="Margin" Value="0,0,2,0" />
		</Style>

		<Style Selector="TabItem:selected">
			<Setter Property="Background" Value="{DynamicResource SurfaceBackgroundBrush}" />
			<Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
		</Style>

		<Style Selector="TabItem:pointerover">
			<Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
		</Style>

		<!-- Grid Splitter Style -->
		<Style Selector="GridSplitter">
			<Setter Property="Background" Value="{DynamicResource DividerBrush}" />
		</Style>

		<Style Selector="GridSplitter:pointerover">
			<Setter Property="Background" Value="{DynamicResource BorderBrush}" />
		</Style>

		<!-- ScrollViewer Style -->
		<Style Selector="ScrollViewer">
			<Setter Property="Background" Value="Transparent" />
		</Style>

		<!-- NumericUpDown Style -->
		<Style Selector="NumericUpDown">
			<Setter Property="Background" Value="{DynamicResource SurfaceBackgroundBrush}" />
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
			<Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
			<Setter Property="CornerRadius" Value="4" />
		</Style>

		<!-- Slider Style -->
		<Style Selector="Slider">
			<Setter Property="Foreground" Value="{DynamicResource SelectionBackgroundBrush}" />
		</Style>

	</Application.Styles>

</Application>