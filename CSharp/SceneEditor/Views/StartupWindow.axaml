<!-- File: CSharp/SceneEditor/Views/StartupWindow.axaml -->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
        x:Class="SceneEditor.Views.StartupWindow"
        Title="WanderSpire Scene Editor"
        Width="600" Height="500"
        MinWidth="500" MinHeight="400"
        WindowStartupLocation="CenterScreen"
        Icon="/Resources/Icons/editor.ico"
        SizeToContent="Manual"
        Background="{DynamicResource AppBackgroundBrush}">

	<!-- Main Content -->
	<Grid Margin="40">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Top spacer -->
		<Border Grid.Row="0"/>

		<!-- Main Content -->
		<StackPanel Grid.Row="1" Spacing="32" HorizontalAlignment="Center">

			<!-- Logo/Title Section -->
			<StackPanel Spacing="16" HorizontalAlignment="Center">
				<!-- Logo placeholder -->
				<Border Width="80" Height="80" CornerRadius="40"
						Background="{DynamicResource SelectionBackgroundBrush}"
						HorizontalAlignment="Center">
					<TextBlock Text="W" FontSize="48" FontWeight="Bold"
							   HorizontalAlignment="Center" VerticalAlignment="Center"
							   Foreground="{DynamicResource SelectionTextBrush}"/>
				</Border>

				<StackPanel Spacing="6" HorizontalAlignment="Center">
					<TextBlock Text="WanderSpire"
							   FontSize="32"
							   FontWeight="Bold"
							   HorizontalAlignment="Center"
							   Foreground="{DynamicResource PrimaryTextBrush}"/>
					<TextBlock Text="Scene Editor"
							   FontSize="18"
							   FontWeight="Medium"
							   Foreground="{DynamicResource SecondaryTextBrush}"
							   HorizontalAlignment="Center"/>
				</StackPanel>
			</StackPanel>

			<!-- Action Buttons -->
			<StackPanel Spacing="16" HorizontalAlignment="Center" Width="300">
				<Button Name="ManageProjectsButton"
						Classes="Primary"
						HorizontalAlignment="Stretch"
						Height="50"
						FontSize="14"
						FontWeight="Medium">
					<StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
						<TextBlock Text="📁" FontSize="20" VerticalAlignment="Center"/>
						<TextBlock Text="Manage Projects" VerticalAlignment="Center"/>
					</StackPanel>
				</Button>

				<Button Name="OpenSceneEditorButton"
						Classes="Secondary"
						HorizontalAlignment="Stretch"
						Height="50"
						FontSize="14"
						FontWeight="Medium">
					<StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
						<TextBlock Text="🎮" FontSize="20" VerticalAlignment="Center"/>
						<TextBlock Text="Open Scene Editor" VerticalAlignment="Center"/>
					</StackPanel>
				</Button>

				<Button Name="ExitButton"
						HorizontalAlignment="Stretch"
						Height="40"
						FontSize="14"
						FontWeight="Medium"
						Background="Transparent"
						BorderThickness="1"
						BorderBrush="{DynamicResource BorderBrush}"
						Foreground="{DynamicResource SecondaryTextBrush}">
					<StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
						<TextBlock Text="🚪" FontSize="16" VerticalAlignment="Center"/>
						<TextBlock Text="Exit" VerticalAlignment="Center"/>
					</StackPanel>
				</Button>
			</StackPanel>

		</StackPanel>

		<!-- Bottom Info -->
		<StackPanel Grid.Row="2" VerticalAlignment="Bottom" Spacing="8" HorizontalAlignment="Center">
			<TextBlock Text="Version 1.0.0"
					   FontSize="12"
					   Foreground="{DynamicResource SecondaryTextBrush}"
					   HorizontalAlignment="Center"/>
			<StackPanel Orientation="Horizontal" Spacing="6" HorizontalAlignment="Center">
				<Ellipse Width="6" Height="6" Fill="{DynamicResource SuccessColor}"/>
				<TextBlock Text="Ready"
						   FontSize="10"
						   Foreground="{DynamicResource SecondaryTextBrush}"/>
			</StackPanel>
		</StackPanel>

	</Grid>

	<!-- Window Styles -->
	<Window.Styles>
		<!-- Enhanced button hover effects -->
		<Style Selector="Button">
			<Setter Property="CornerRadius" Value="8"/>
			<Setter Property="Transitions">
				<Transitions>
					<BrushTransition Property="Background" Duration="0:0:0.2"/>
					<BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
				</Transitions>
			</Setter>
		</Style>

		<Style Selector="Button:pointerover">
			<Setter Property="Opacity" Value="0.9"/>
		</Style>

		<Style Selector="Button:pressed">
			<Setter Property="Opacity" Value="0.8"/>
		</Style>

		<!-- Primary button styling -->
		<Style Selector="Button.Primary">
			<Setter Property="Background" Value="{DynamicResource SelectionBackgroundBrush}"/>
			<Setter Property="Foreground" Value="{DynamicResource SelectionTextBrush}"/>
			<Setter Property="BorderThickness" Value="0"/>
		</Style>

		<!-- Secondary button styling -->
		<Style Selector="Button.Secondary">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="Foreground" Value="{DynamicResource AccentTextBrush}"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="BorderBrush" Value="{DynamicResource AccentTextBrush}"/>
		</Style>

		<Style Selector="Button.Secondary:pointerover">
			<Setter Property="Background" Value="{DynamicResource SelectionBackgroundBrush}"/>
			<Setter Property="Foreground" Value="{DynamicResource SelectionTextBrush}"/>
		</Style>
	</Window.Styles>

</Window>